$TTL	604800
168.192.in-addr.arpa.	IN	SOA	ns.{{ domain_name }}. mail.{{ domain_name }}. (
			      2		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{% for host in groups['dns_servers'] %}
168.192.in-addr.arpa. IN NS {{ host }}.{{ domain_name }}.
{% endfor %}
; PTR RECORDS
{% for host in groups['all'] %}
{% set host_ip = hostvars[host]['ansible_default_ipv4']['address'].split('.') %}
{{ host_ip[3] }}.{{ host_ip[2] }} IN PTR {{host}}.{{ domain_name }}.
{% endfor %}
